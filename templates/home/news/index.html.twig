{% extends 'base.html.twig' %}

{% block title %}Actualité{% endblock %}

{% block body %}
<h1 class="h1">News</h1>

    <div>
        {% for new in news %}
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">{{ new.title }}</h2>
                    <p>{{ new.description | raw }}</p>
                </div>
                <div class="card-footer justify-content-between">
                    <a href="{{ path('news.show', {'id': new.id }) }}" class="btn-primary">Voir</a>
                    <p>Créer le: {{ new.createdAt | date('m/d/Y') }}</p>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
